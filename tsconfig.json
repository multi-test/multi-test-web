{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": true,
    "outDir": "tmp",
    "importHelpers": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "strict": false,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.js",
    "lib/**/*.tsx",
    "lib/**/*.jsx"
  ]
}